
{
  "compilerOptions": {    
    "target": "esnext",    
    "baseUrl": "./src",   
    "allowSyntheticDefaultImports": true,
    "strictNullChecks":false,                
    "jsx": "react-native",                        
    "lib": ["es2017"],                        
    "moduleResolution": "node",               
    "noEmit": true,                           
    "skipLibCheck": true,                     
    "resolveJsonModule": true,               
    "paths": {
      "~/*": ["./*"],
      "~package/*": ["../package.json"]
    }                 
  },
  "exclude": [
    "node_modules", 
    "babel.config.js", 
    "metro.config.js", 
    "jest.config.js"
  ]
}
